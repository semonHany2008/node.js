<!DOCTYPE html>
<html lang="ar">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <title>Chat</title>
</head>

<body>
    <%-include("./partials/sidebar.ejs")%>
    <div class="header">
        <h2>Hello, <span id="user"></span></h2>
        <button id="logout">Logout</button>
    </div>

    <div class="chat_room" style="display:none">
        <div id="chatBox"
            style="margin-top:20px; border:1px solid #ccc; padding:10px; width:300px; height:200px; overflow:auto;"></div>

        <div>
            <!-- <input type="text" id="toUser" placeholder="Recipient Name"> -->
            <input type="text" id="message" placeholder="Write your message">
            <button id="sendBtn">Send</button>
        </div>
    </div>

    <div class="searched_friend" style="display:none">
        <h3 id="searched_friend"></h3>
        <button id="add_friend" style="display:none">Add Friend</button>
        <button id="chat_friend" style="display:none">chat</button>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/client.js"></script>
    <script src="/js/sidebar.js" defer></script>
</body>

</html>