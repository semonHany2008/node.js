
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('partials/header', { title: 'Edit Student' }) %>
    <%- include('partials/navigation', { page: 'edit-student' }) %>

    <section class="section active">
        <h2>Edit Student</h2>
        
        <% if (message) { %>
            <div class="message <%= message.includes('successfully') ? 'success' : 'error' %>">
                <%= message %>
            </div>
        <% } %>
        
        <form class="student-form" method="POST" id="editStudentForm" action="/editStudent/<%= student.id %>">
            <div class="form-group">
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" value="<%= student.firstName %>" required>
            </div>
            
            <div class="form-group">
                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" value="<%= student.lastName %>" required>
            </div>
            
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= student.email %>" required>
            </div>
            
            <div class="form-group">
                <label for="age">Age:</label>
                <input type="number" id="age" name="age" value="<%= student.age %>" min="16" max="100" required>
            </div>
            
            <div class="form-group">
                <label for="course">Course:</label>
                <select id="course" name="course" required>
                    <option value="Computer Science" <%= student.course === 'Computer Science' ? 'selected' : '' %>>Computer Science</option>
                    <option value="Mathematics" <%= student.course === 'Mathematics' ? 'selected' : '' %>>Mathematics</option>
                    <option value="Physics" <%= student.course === 'Physics' ? 'selected' : '' %>>Physics</option>
                    <option value="Chemistry" <%= student.course === 'Chemistry' ? 'selected' : '' %>>Chemistry</option>
                    <option value="Biology" <%= student.course === 'Biology' ? 'selected' : '' %>>Biology</option>
                    <option value="English" <%= student.course === 'English' ? 'selected' : '' %>>English</option>
                    <option value="History" <%= student.course === 'History' ? 'selected' : '' %>>History</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="status">Status:</label>
                <select id="status" name="status" required>
                    <option value="Active" <%= student.status === 'Active' ? 'selected' : '' %>>Active</option>
                    <option value="Inactive" <%= student.status === 'Inactive' ? 'selected' : '' %>>Inactive</option>
                    <option value="Graduated" <%= student.status === 'Graduated' ? 'selected' : '' %>>Graduated</option>
                </select>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn-primary">Update Student</button>
                <a href="/students" class="btn-secondary">Cancel</a>
            </div>
        </form>
    </section>

    <%- include('partials/footer') %>

    <script>
        function editStudent(firstName, lastName, email, age, course, status) {
            fetch(`/editStudent/${student.id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ firstName, lastName, email, age, course, status })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.href = '/';
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            });
        }

        document.getElementById('editStudentForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const firstName = document.getElementById('firstName').value;
            const age = document.getElementById('age').value;
            const lastName = document.getElementById('lastName').value;
            const email = document.getElementById('email').value;
            const course = document.getElementById('course').value;
            const status = document.getElementById('status').value;
            editStudent(firstName, lastName, email, age, course, status);
        });
    </script>
</body>
</html>
