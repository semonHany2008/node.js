<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Student Management System</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .auth-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 20px;
        }
        
        .auth-card {
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }
        
        .auth-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .auth-header h1 {
            color: #4f46e5;
            font-size: 2rem;
            margin-bottom: 10px;
        }
        
        .auth-header p {
            color: #64748b;
        }
        
        .message {
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 20px;
            text-align: center;
        }
        
        .message.error {
            background: #fef2f2;
            color: #dc2626;
            border: 1px solid #fecaca;
        }
        
        .message.success {
            background: #f0fdf4;
            color: #16a34a;
            border: 1px solid #bbf7d0;
        }
        
        .auth-links {
            text-align: center;
            margin-top: 20px;
        }
        
        .auth-links a {
            color: #4f46e5;
            text-decoration: none;
        }
        
        .auth-links a:hover {
            text-decoration: underline;
        }
        
        .demo-accounts {
            background: #f8fafc;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
            border: 1px solid #e2e8f0;
        }
        
        .demo-accounts h3 {
            color: #374151;
            margin-bottom: 15px;
            font-size: 1rem;
        }
        
        .demo-account {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            border-bottom: 1px solid #e2e8f0;
        }
        
        .demo-account:last-child {
            border-bottom: none;
        }
        
        .demo-account span {
            font-size: 0.9rem;
            color: #64748b;
        }
        
        .demo-account .role {
            background: #4f46e5;
            color: white;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
        }
        
        .quick-login {
            background: #e2e8f0;
            border: none;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.8rem;
            cursor: pointer;
            color: #4f46e5;
        }
        
        .quick-login:hover {
            background: #cbd5e1;
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <h1>Login</h1>
                <p>Access the Student Management System</p>
            </div>
            
            <% if (message) { %>
                <div class="message error">
                    <%= message %>
                </div>
            <% } %>
            
            <form method="POST" id="loginForm" action="/login">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required>
                </div>
                
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                
                <button type="submit" class="btn-primary" style="width: 100%;">Login</button>
            </form>
            
            <div class="auth-links">
                <p>Don't have an account? <a href="/register">Register here</a></p>
            </div>
            
            <div class="demo-accounts">
                <h3>Demo Accounts:</h3>
                <div class="demo-account">
                    <span>admin / admin123</span>
                    <span class="role">Admin</span>
                    <button class="quick-login" onclick="quickLogin('admin', 'admin123')">Use</button>
                </div>
                <div class="demo-account">
                    <span>teacher1 / teacher123</span>
                    <span class="role">Teacher</span>
                    <button class="quick-login" onclick="quickLogin('teacher1', 'teacher123')">Use</button>
                </div>
                <div class="demo-account">
                    <span>student1 / student123</span>
                    <span class="role">Student</span>
                    <button class="quick-login" onclick="quickLogin('student1', 'student123')">Use</button>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        function quickLogin(username, password) {
            fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ username, password })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.href = '/';
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            });
        }

        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            quickLogin(username, password);
        });
    </script>
</body>
</html>
